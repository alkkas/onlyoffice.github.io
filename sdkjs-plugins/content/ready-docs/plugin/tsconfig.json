{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2015",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "lib": ["DOM"],
    "paths": {
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "static/*": ["src/static/*"],
      "api/*": ["src/api/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
